<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple"
        android:padding="12dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guess_one_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #1!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/guess_one_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/guess_one_label"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/guess_one_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #1 check!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess_one_label"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/guess_one_input_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintStart_toEndOf="@+id/guess_one_check_label"
        app:layout_constraintTop_toBottomOf="@+id/guess_one_input_label"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/guess_two_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #2!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess_one_check_label"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/guess_two_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/guess_two_label"
        app:layout_constraintTop_toBottomOf="@+id/guess_one_input_check_label"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/guess_two_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #2 check!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess_two_label"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/guess_two_input_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.664"
        app:layout_constraintStart_toEndOf="@+id/guess_two_check_label"
        app:layout_constraintTop_toBottomOf="@+id/guess_two_input_label"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/guess_three_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #3!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess_two_check_label"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/guess_three_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/guess_three_label"
        app:layout_constraintTop_toBottomOf="@+id/guess_two_input_check_label"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/guess_three_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #3 check!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess_three_label"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/guess_three_input_check_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintStart_toEndOf="@+id/guess_three_check_label"
        app:layout_constraintTop_toBottomOf="@+id/guess_three_input_label"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/word_to_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="book"
        android:visibility="invisible"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/input_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_textbox"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter 4 letter guess here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guess_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/guess_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Guess!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>